

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>
  		
  		<!--エラーメッセージ-->
      <%= render "books_error" %>
    	  <%= form_with model: @book , local: true do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label><br/>
        <%= f.text_field :title %>
      </div>

      <div class="form-group">
        <label for="book_opinion">Opinion</label><br/>
        <%= f.text_field :body %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update Book', class: 'btn btn-success' %>
      </div>

      <%= link_to "Show", book_path(@book) %>|<%= link_to "Back", books_path %>
      <% end %>
    </div>
  </div>
</div>